{
  "name": "krisp",
  "version": "0.0.1",
  "description": "Serve your blog from markdown files",
  "scripts": {
    "dev": "ncc build src/cli.ts -w -o ./dist",
    "bundle": "ncc build src/cli.ts -o ./dist --minify",
    "clean": "rm -rf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "npm run bundle && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish"
  },
  "bin": {
    "krisp": "./dist/index.js"
  },
  "keywords": [
    "krisp",
    "markdown",
    "blog",
    "site",
    "static",
    "generator",
    "server",
    "cli"
  ],
  "author": "Yatharth",
  "license": "ISC",
  "devDependencies": {
    "@types/graceful-fs": "^4.1.9",
    "@types/gradient-string": "^1.1.5",
    "@types/node": "^20.10.2",
    "@types/nunjucks": "^3.2.6",
    "@types/parseurl": "^1.3.3",
    "@types/send": "^0.17.4",
    "@types/sprintf-js": "^1.1.4",
    "@vercel/ncc": "^0.38.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "date-fns": "^2.30.0",
    "graceful-fs": "^4.2.11",
    "gradient-string": "^2.0.2",
    "gray-matter": "^4.0.3",
    "h3": "^1.9.0",
    "marked": "^11.0.1",
    "nunjucks": "^3.2.4",
    "parseurl": "^1.3.3",
    "send": "^0.18.0",
    "slugify": "^1.6.6",
    "sprintf-js": "^1.1.3"
  }
}
