{% set title = $manifest.website.metadata.title %}
{% set email = $manifest.email %}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link 
    rel="stylesheet"
    href="/assets/styles.css"
  />
  <title>{{title}}</title>
</head>
<body>
  <div class="site">
    <div class="title">
      <a href="/">{{title}}</a>
    </div>
    <main id="home">
      {% block content %}{% endblock %}
    </main>
    <footer class="footer">
      <div class="contact">
        <p>
          {{title}}
          <br />
          <a href="mailto:{{email}}">{{email}}</a>
        </p>
      </div>
    </footer>
  </div>
</body>
</html>
